{
  "name": "positron-redmine",
  "displayName": "Redmine for Positron",
  "description": "Redmine project management integration for Positron IDE and VS Code",
  "version": "3.2.1",
  "publisher": "vrognas",
  "license": "MIT",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vrognas/positron-redmine.git"
  },
  "engines": {
    "vscode": "^1.106.0",
    "positron": "^2025.06.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "redmine.configure",
        "title": "Redmine: Configure",
        "icon": "$(settings-gear)"
      },
      {
        "command": "redmine.setApiKey",
        "title": "Redmine: Set API Key"
      },
      {
        "command": "redmine.listOpenIssuesAssignedToMe",
        "title": "Redmine: List open issues assigned to me"
      },
      {
        "command": "redmine.openActionsForIssue",
        "title": "Redmine: Actions for issue"
      },
      {
        "command": "redmine.newIssue",
        "title": "Redmine: Create new issue"
      },
      {
        "command": "redmine.openActionsForIssueUnderCursor",
        "title": "Redmine: Actions for issue under cursor"
      },
      {
        "command": "redmine.quickLogTime",
        "title": "Redmine: Quick Log Time"
      },
      {
        "command": "redmine.changeDefaultServer",
        "title": "Redmine: Change server"
      },
      {
        "command": "redmine.refreshIssues",
        "title": "Redmine: Refresh issues",
        "icon": "$(refresh)"
      },
      {
        "command": "redmine.toggleTreeView",
        "title": "Toggle Project View: Tree",
        "icon": "$(list-tree)"
      },
      {
        "command": "redmine.toggleListView",
        "title": "Toggle Project View: List",
        "icon": "$(list-flat)"
      },
      {
        "command": "redmine.showApiOutput",
        "title": "Redmine: Show API Output"
      },
      {
        "command": "redmine.clearApiOutput",
        "title": "Redmine: Clear API Output"
      },
      {
        "command": "redmine.toggleApiLogging",
        "title": "Redmine: Toggle API Logging"
      },
      {
        "command": "redmine.refreshTimeEntries",
        "title": "Redmine: Refresh time entries",
        "icon": "$(refresh)"
      },
      {
        "command": "redmine.openTimeEntryInBrowser",
        "title": "Open in Browser"
      }
    ],
    "keybindings": [
      {
        "command": "redmine.quickLogTime",
        "key": "ctrl+y ctrl+y",
        "mac": "cmd+y cmd+y",
        "when": "!terminalFocus && !inDebugMode && !inQuickOpen"
      }
    ],
    "views": {
      "redmine-explorer": [
        {
          "id": "redmine-explorer-my-issues",
          "name": "Issues assigned to me"
        },
        {
          "id": "redmine-explorer-projects",
          "name": "Projects"
        },
        {
          "id": "redmine-explorer-my-time-entries",
          "name": "My Time Entries"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "redmine-explorer-my-issues",
        "contents": "No Redmine configuration found.\n[Configure Redmine](command:redmine.configure)\nSet up your Redmine server URL and API key to get started.",
        "when": "!redmine:configured"
      },
      {
        "view": "redmine-explorer-projects",
        "contents": "No Redmine configuration found.\n[Configure Redmine](command:redmine.configure)\nSet up your Redmine server URL and API key to get started.",
        "when": "!redmine:configured"
      },
      {
        "view": "redmine-explorer-my-time-entries",
        "contents": "No Redmine configuration found.\n[Configure Redmine](command:redmine.configure)\nSet up your Redmine server URL and API key to get started.",
        "when": "!redmine:configured"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "title": "Redmine",
          "id": "redmine-explorer",
          "name": "Redmine",
          "icon": "logo.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "redmine.changeDefaultServer",
          "when": "false"
        },
        {
          "command": "redmine.refreshIssues",
          "when": "false"
        },
        {
          "command": "redmine.toggleTreeView",
          "when": "false"
        },
        {
          "command": "redmine.toggleListView",
          "when": "false"
        },
        {
          "command": "redmine.refreshTimeEntries",
          "when": "false"
        },
        {
          "command": "redmine.openTimeEntryInBrowser",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "redmine.configure",
          "when": "view == 'redmine-explorer-my-issues'",
          "group": "navigation"
        },
        {
          "command": "redmine.configure",
          "when": "view == 'redmine-explorer-projects'",
          "group": "navigation"
        },
        {
          "command": "redmine.changeDefaultServer",
          "when": "view == 'redmine-explorer-my-issues' && !hasSingleConfig"
        },
        {
          "command": "redmine.changeDefaultServer",
          "when": "view == 'redmine-explorer-projects' && !hasSingleConfig"
        },
        {
          "command": "redmine.toggleTreeView",
          "when": "view == 'redmine-explorer-projects' && redmine:treeViewStyle",
          "group": "navigation"
        },
        {
          "command": "redmine.toggleListView",
          "when": "view == 'redmine-explorer-projects' && !redmine:treeViewStyle",
          "group": "navigation"
        },
        {
          "command": "redmine.refreshIssues",
          "when": "view == 'redmine-explorer-projects' || view == 'redmine-explorer-my-issues'",
          "group": "navigation"
        },
        {
          "command": "redmine.configure",
          "when": "view == 'redmine-explorer-my-time-entries'",
          "group": "navigation"
        },
        {
          "command": "redmine.changeDefaultServer",
          "when": "view == 'redmine-explorer-my-time-entries' && !hasSingleConfig"
        },
        {
          "command": "redmine.refreshTimeEntries",
          "when": "view == 'redmine-explorer-my-time-entries'",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "redmine.openTimeEntryInBrowser",
          "when": "view == 'redmine-explorer-my-time-entries' && viewItem == 'time-entry'"
        }
      ]
    },
    "configuration": {
      "title": "Redmine Integration",
      "properties": {
        "redmine.url": {
          "type": "string",
          "markdownDescription": "**Redmine server URL**\n\n⚠️ Changing/removing this requires reconfiguring API key\n\n**Storage:**\n- URL: User settings (`settings.json`)\n- API Key: Encrypted secrets (Windows Credential Manager / macOS Keychain / Linux libsecret)\n- API keys are machine-local and never synced",
          "examples": [
            "https://example.com",
            "http://example.com:8080",
            "https://example.com:8443/redmine",
            "http://example.com/redmine"
          ],
          "scope": "machine"
        },
        "redmine.apiKey": {
          "type": "string",
          "description": "DEPRECATED: Use 'Redmine: Set API Key' command instead",
          "deprecationMessage": "API keys now stored in VS Code secrets. Run 'Redmine: Set API Key'",
          "scope": "machine"
        },
        "redmine.rejectUnauthorized": {
          "type": "boolean",
          "description": "Pass rejectUnauthorized to https request options. Use only if your redmine instance has self-signed certificate!",
          "default": "false",
          "scope": "machine"
        },
        "redmine.identifier": {
          "type": "string",
          "description": "Project identifier in Redmine",
          "default": "",
          "scope": "machine"
        },
        "redmine.additionalHeaders": {
          "type": "object",
          "description": "Additional headers",
          "default": {},
          "scope": "machine"
        },
        "redmine.logging.enabled": {
          "type": "boolean",
          "description": "Enable API request/response logging to output channel",
          "default": true,
          "scope": "machine"
        },
        "redmine.workingHours.hoursPerDay": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "maximum": 16,
          "scope": "application",
          "markdownDescription": "**DEPRECATED:** Use `#redmine.workingHours.weeklySchedule#` instead.\n\nDaily working hours for time entry calculations.",
          "deprecationMessage": "Use redmine.workingHours.weeklySchedule to set hours per day of week"
        },
        "redmine.workingHours.workingDays": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]
          },
          "default": ["Mon", "Tue", "Wed", "Thu", "Fri"],
          "minItems": 1,
          "maxItems": 7,
          "uniqueItems": true,
          "scope": "application",
          "markdownDescription": "**DEPRECATED:** Use `#redmine.workingHours.weeklySchedule#` instead.\n\nWorking days for time entry calculations.",
          "deprecationMessage": "Use redmine.workingHours.weeklySchedule to set hours per day of week"
        },
        "redmine.workingHours.weeklySchedule": {
          "type": "object",
          "default": {
            "Mon": 8,
            "Tue": 8,
            "Wed": 8,
            "Thu": 8,
            "Fri": 8,
            "Sat": 0,
            "Sun": 0
          },
          "properties": {
            "Mon": { "type": "number", "minimum": 0, "maximum": 24 },
            "Tue": { "type": "number", "minimum": 0, "maximum": 24 },
            "Wed": { "type": "number", "minimum": 0, "maximum": 24 },
            "Thu": { "type": "number", "minimum": 0, "maximum": 24 },
            "Fri": { "type": "number", "minimum": 0, "maximum": 24 },
            "Sat": { "type": "number", "minimum": 0, "maximum": 24 },
            "Sun": { "type": "number", "minimum": 0, "maximum": 24 }
          },
          "additionalProperties": false,
          "scope": "application",
          "markdownDescription": "**Weekly working hours schedule**\n\nSet working hours for each day of the week (0-24h). Use 0 for non-working days.\n\n**Example schedules:**\n- Standard 5-day week: Mon-Fri = 8h, Sat-Sun = 0h\n- 4-day week: Mon-Thu = 10h, Fri-Sun = 0h\n- Part-time Friday: Mon-Thu = 8h, Fri = 4h, Sat-Sun = 0h\n\nUsed to calculate utilization percentages in time entry view."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.cjs --production",
    "watch": "node esbuild.cjs --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf out/ coverage/",
    "lint": "eslint .",
    "package": "npx @vscode/vsce package",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && npm run typecheck && npm run test:coverage",
    "install-hooks": "bash scripts/install-hooks.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  }
}
