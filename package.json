{
  "name": "positron-redmine",
  "displayName": "Redmine for Positron",
  "description": "Redmine project management integration for Positron IDE and VS Code",
  "version": "3.0.1",
  "publisher": "vrognas",
  "license": "MIT",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vrognas/positron-redmine.git"
  },
  "engines": {
    "vscode": "^1.106.0",
    "positron": "^2025.06.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "redmine.configure",
        "title": "Redmine: Configure",
        "icon": "$(settings-gear)"
      },
      {
        "command": "redmine.setApiKey",
        "title": "Redmine: Set API Key"
      },
      {
        "command": "redmine.listOpenIssuesAssignedToMe",
        "title": "Redmine: List open issues assigned to me"
      },
      {
        "command": "redmine.openActionsForIssue",
        "title": "Redmine: Actions for issue"
      },
      {
        "command": "redmine.newIssue",
        "title": "Redmine: Create new issue"
      },
      {
        "command": "redmine.openActionsForIssueUnderCursor",
        "title": "Redmine: Actions for issue under cursor"
      },
      {
        "command": "redmine.changeDefaultServer",
        "title": "Redmine: Change server"
      },
      {
        "command": "redmine.refreshIssues",
        "title": "Redmine: Refresh issues",
        "icon": "$(refresh)"
      },
      {
        "command": "redmine.toggleTreeView",
        "title": "Toggle Project View: Tree",
        "icon": "$(list-tree)"
      },
      {
        "command": "redmine.toggleListView",
        "title": "Toggle Project View: List",
        "icon": "$(list-flat)"
      }
    ],
    "views": {
      "redmine-explorer": [
        {
          "id": "redmine-explorer-my-issues",
          "name": "Issues assigned to me"
        },
        {
          "id": "redmine-explorer-projects",
          "name": "Projects"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "redmine-explorer-my-issues",
        "contents": "No Redmine configuration found.\n[Configure Redmine](command:redmine.configure)\nSet up your Redmine server URL and API key to get started.",
        "when": "!redmine:configured"
      },
      {
        "view": "redmine-explorer-projects",
        "contents": "No Redmine configuration found.\n[Configure Redmine](command:redmine.configure)\nSet up your Redmine server URL and API key to get started.",
        "when": "!redmine:configured"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "title": "Redmine",
          "id": "redmine-explorer",
          "name": "Redmine",
          "icon": "logo.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "redmine.changeDefaultServer",
          "when": "false"
        },
        {
          "command": "redmine.refreshIssues",
          "when": "false"
        },
        {
          "command": "redmine.toggleTreeView",
          "when": "false"
        },
        {
          "command": "redmine.toggleListView",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "redmine.configure",
          "when": "view == 'redmine-explorer-my-issues'",
          "group": "navigation"
        },
        {
          "command": "redmine.configure",
          "when": "view == 'redmine-explorer-projects'",
          "group": "navigation"
        },
        {
          "command": "redmine.changeDefaultServer",
          "when": "view == 'redmine-explorer-my-issues' && !hasSingleConfig"
        },
        {
          "command": "redmine.changeDefaultServer",
          "when": "view == 'redmine-explorer-projects' && !hasSingleConfig"
        },
        {
          "command": "redmine.toggleTreeView",
          "when": "view == 'redmine-explorer-projects' && redmine:treeViewStyle",
          "group": "navigation"
        },
        {
          "command": "redmine.toggleListView",
          "when": "view == 'redmine-explorer-projects' && !redmine:treeViewStyle",
          "group": "navigation"
        },
        {
          "command": "redmine.refreshIssues",
          "when": "view == 'redmine-explorer-projects' || view == 'redmine-explorer-my-issues'",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Redmine Integration",
      "properties": {
        "redmine.url": {
          "type": "string",
          "markdownDescription": "**Redmine server URL**\n\n⚠️ Changing/removing this requires reconfiguring API key\n\n**Storage:**\n- URL: User settings (`settings.json`)\n- API Key: Encrypted secrets (Windows Credential Manager / macOS Keychain / Linux libsecret)\n- API keys are machine-local and never synced",
          "examples": [
            "https://example.com",
            "http://example.com:8080",
            "https://example.com:8443/redmine",
            "http://example.com/redmine"
          ],
          "scope": "machine"
        },
        "redmine.apiKey": {
          "type": "string",
          "description": "DEPRECATED: Use 'Redmine: Set API Key' command instead",
          "deprecationMessage": "API keys now stored in VS Code secrets. Run 'Redmine: Set API Key'",
          "scope": "machine"
        },
        "redmine.rejectUnauthorized": {
          "type": "boolean",
          "description": "Pass rejectUnauthorized to https request options. Use only if your redmine instance has self-signed certificate!",
          "default": "false",
          "scope": "machine"
        },
        "redmine.identifier": {
          "type": "string",
          "description": "Project identifier in Redmine",
          "default": "",
          "scope": "machine"
        },
        "redmine.additionalHeaders": {
          "type": "object",
          "description": "Additional headers",
          "default": {},
          "scope": "machine"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.cjs --production",
    "watch": "node esbuild.cjs --watch",
    "lint": "eslint .",
    "package": "npx @vscode/vsce package",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "^0.27.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "msw": "^2.12.2",
    "prettier": "^2.0.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
