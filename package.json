    "keybindings": [
      {
        "command": "redmine.quickLogTime",
        "key": "ctrl+y ctrl+y",
        "mac": "cmd+y cmd+y",
        "when": "!terminalFocus && !inDebugMode && !inQuickOpen"
      },
      {
        "command": "redmine.quickCreateIssue",
        "key": "ctrl+y ctrl+n",
        "mac": "cmd+y cmd+n",
        "when": "!terminalFocus && !inDebugMode && !inQuickOpen"
      },
      {
        "command": "redmine.timer.toggle",
        "key": "ctrl+y ctrl+t",
        "mac": "cmd+y cmd+t",
        "when": "!terminalFocus && !inDebugMode && !inQuickOpen"
      }
